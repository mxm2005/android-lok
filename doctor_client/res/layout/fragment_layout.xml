<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/main_bg">


	<LinearLayout android:layout_width="0px" android:background="@drawable/main_toolbar_bg"
		android:orientation="vertical" android:layout_height="fill_parent"
		android:layout_weight="1">
		<RelativeLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_marginBottom="15dip" android:layout_marginRight="10dip">
			<ImageView android:id="@+id/imgGender" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_alignParentLeft="true"
				android:background="@drawable/patient_icon_female"
				android:layout_marginLeft="20dip" android:layout_marginTop="20dip" />
			<ImageView android:id="@+id/imgGender2" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_alignParentLeft="true"
				android:background="@drawable/tjhl" />
			<TextView android:layout_width="wrap_content" android:layout_marginBottom="8dip"  android:layout_marginLeft="12dip"
				android:layout_height="wrap_content" android:text="张丽娟"
				android:textSize="22.0sp" android:textColor="@color/white"
				android:layout_below="@id/imgGender" android:gravity="center" />
			<LinearLayout android:layout_width="fill_parent" android:layout_marginTop="15dip" android:layout_marginBottom="10dip"
				android:layout_height="wrap_content" android:layout_toRightOf="@id/imgGender"
				android:orientation="vertical" android:gravity="left">
				<LinearLayout android:layout_width="fill_parent" android:layout_weight="1"
					android:gravity="left" android:orientation="horizontal"
					android:layout_height="0.0dip">
					<TextView android:textSize="16.0sp" android:textColor="@color/white" android:layout_weight="1" android:id="@+id/tvBedNO"
						android:gravity="left" android:text="床号:23-1" android:layout_width="0dip" android:layout_marginLeft="18dip"
						android:layout_height="fill_parent"/>
					<TextView android:textSize="16.0sp" android:textColor="@color/white" android:layout_weight="1"
						android:gravity="left" android:text="33010" android:layout_width="0dip"
						android:layout_height="fill_parent"/>
				</LinearLayout>
				<LinearLayout android:layout_width="fill_parent" android:layout_weight="1"
					android:gravity="left" android:orientation="horizontal"
					android:layout_height="0.0dip">
					<TextView android:textSize="16.0sp" android:textColor="@color/white"
						android:layout_weight="1" android:gravity="left" android:text="29岁"
						android:layout_width="0dip" android:layout_marginLeft="18dip"
						android:layout_height="18.0dip" android:layout_above="@+id/tvAge2" />
					<TextView android:textSize="16.0sp" android:textColor="@color/white"
						android:text="男" android:layout_width="0dip" android:layout_weight="1"
						android:layout_height="18.0dip" android:gravity="left"/>
					<TextView android:textSize="16.0sp" android:textColor="@color/white"
						android:text="一般" android:layout_width="0dip" android:layout_weight="1"
						android:layout_height="18.0dip" android:gravity="left"/>
					<TextView android:textSize="16.0sp" android:textColor="@color/white"
						android:text="特级护理" android:layout_width="0dip" android:layout_weight="2"
						android:layout_height="18.0dip" android:gravity="left"/>
				</LinearLayout>
				<TextView android:textSize="16.0sp" android:textColor="@color/white" android:layout_weight="1"
					android:gravity="left" android:text="入院:232天" android:layout_width="fill_parent"
					android:layout_height="0.0dip" android:layout_marginLeft="18dip"/>
				<TextView android:textSize="16.0sp" android:textColor="@color/white" android:layout_weight="1"
					android:gravity="left" android:text="诊断:(K35.902)急性阑尾炎" android:layout_width="fill_parent"
					android:layout_height="0.0dip" android:layout_marginLeft="18dip"/>
			</LinearLayout>
		</RelativeLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent">
			<ListView android:layout_width="0dip" android:layout_height="fill_parent"
				android:layout_weight="2" android:id="@+id/lv_titles"
				android:cacheColorHint="#00000000" android:background="@drawable/main_toolbar_bg"
				android:dividerHeight="0dip" android:divider="@null" />
			
			<LinearLayout android:layout_width="0dip" android:layout_margin="10dip"
				android:layout_height="fill_parent" android:layout_weight="6"
				android:id="@+id/lin_lv_tab" android:orientation="vertical">
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>

	<LinearLayout android:layout_width="0px" android:id="@+id/lin_summary"
		android:layout_height="fill_parent" android:layout_weight="2">
	</LinearLayout>
</LinearLayout>