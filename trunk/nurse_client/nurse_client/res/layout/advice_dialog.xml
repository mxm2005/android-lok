<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
	android:layout_width="300dip"
	android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android">
	<ScrollView android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent" android:layout_height="wrap_content">
			<TextView android:textSize="20.0sp" android:textColor="@color/white"
				android:layout_width="260dip" android:layout_height="50dip"
				android:paddingLeft="10.0dip" android:gravity="center_vertical"
				android:layout_marginTop="5.0dip" android:text="执行方式"
				android:layout_marginLeft="10.0dip" android:layout_marginRight="10.0dip" />
			<TextView android:layout_gravity="center"
				android:layout_width="fill_parent" android:textColor="@color/white"
				android:layout_height="wrap_content" android:paddingLeft="5.0dip"
				android:layout_marginTop="5.0dip" android:text="阿托品注射液   0.5mg"
				android:textSize="20.0sp" android:id="@+id/VAF22N"/>
			<TextView android:textSize="20.0sp" android:textColor="@color/white"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:paddingLeft="5.0dip" android:layout_marginTop="5.0dip"
				android:text="0.5mg*10支/盒" android:id="@+id/FGross"/>

			<LinearLayout android:layout_gravity="center"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_marginTop="5.0dip" android:paddingLeft="5dip">
				<TextView android:layout_gravity="center" android:id="@+id/RouteN"
					android:layout_weight="1" android:layout_width="fill_parent"
					android:layout_height="fill_parent" android:textColor="@color/white"
					android:text="肌肉注射" android:textSize="20.0sp" />
				<TextView android:layout_gravity="center" android:id="@+id/VAF26"
					android:layout_weight="1" android:layout_width="fill_parent"
					android:layout_height="fill_parent" android:textColor="@color/white"
					android:text="一次性" android:textSize="20.0sp" />
			</LinearLayout>
			<TextView android:textSize="20.0sp" android:textColor="@color/white"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:paddingLeft="5.0dip" android:layout_marginTop="5.0dip"
				android:text="要求时间：02-09 16：00" android:id="@+id/VAF36"/>
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:layout_marginTop="10.0dip"
				android:orientation="vertical">
				<Button android:id="@+id/ok" android:layout_width="fill_parent"
					android:textColor="@color/white" android:layout_height="wrap_content"
					android:gravity="center" android:paddingLeft="13dip"
					android:text="正常执行" android:layout_weight="1.0" android:textSize="26sp" />
				<Button android:id="@+id/no" android:layout_width="fill_parent"
					android:textColor="@color/white" android:layout_height="wrap_content"
					android:gravity="center" android:paddingLeft="13dip"
					android:text="病人外出" android:layout_weight="1.0" android:textSize="26sp" />
				<Button android:id="@+id/no" android:layout_width="fill_parent"
					android:textColor="@color/white" android:layout_height="wrap_content"
					android:gravity="center" android:paddingLeft="13dip"
					android:text="病人拒绝" android:layout_weight="1.0" android:textSize="26sp" />
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
