<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/bg">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_weight="1" android:layout_height="wrap_content"
		android:paddingTop="20dp">
		<TextView android:layout_width="fill_parent" android:gravity="center"
			android:layout_height="wrap_content" android:text="中联移动护士工作站"
			android:textSize="28sp" />
	</LinearLayout>

	<LinearLayout android:layout_width="fill_parent"
		android:paddingTop="50dp" android:layout_height="wrap_content"
		android:orientation="vertical" android:layout_weight="1">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<TextView android:layout_width="wrap_content"
				android:gravity="center" android:layout_height="wrap_content"
				android:text="用户名" android:textSize="19sp" android:paddingLeft="15dp"
				android:paddingRight="25dp" />
			<EditText android:layout_width="170dp"
				android:layout_height="wrap_content" />
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="密码："
				android:textSize="19sp" android:paddingLeft="15dp"
				android:paddingRight="25dp" />
			<EditText android:layout_width="170dp"
				android:layout_height="wrap_content" />
		</LinearLayout>
	</LinearLayout>

	<LinearLayout android:layout_width="fill_parent"
		android:paddingTop="30dp" android:layout_height="wrap_content"
		android:gravity="center" android:layout_weight="0.5">
		<Button android:layout_width="90dp" android:id="@+id/btn_login"
			android:layout_height="wrap_content" android:text="登录"
			android:textSize="19sp" android:gravity="center"
			android:layout_marginRight="17dp" android:textColor="@color/white"
			android:background="@drawable/btn_click_selector" />
		<Button android:layout_width="90dp" android:layout_marginLeft="17dp"
			android:layout_height="wrap_content" android:text="退出" android:id="@+id/btn_exit"
			android:textSize="19sp" android:gravity="center" android:textColor="@color/white"
			android:background="@drawable/btn_click_selector" />
	</LinearLayout>

	<LinearLayout android:layout_width="fill_parent"
		android:paddingBottom="50dp" android:layout_height="wrap_content"
		android:paddingTop="20dp">
		<TextView android:layout_width="fill_parent" android:gravity="center"
			android:layout_height="wrap_content" android:text="中联移动版权所有  2012"
			android:textSize="20sp" />
	</LinearLayout>

	<LinearLayout android:layout_width="fill_parent"
		android:layout_marginBottom="10dp" android:layout_weight="0"
		android:layout_height="wrap_content" android:gravity="right|center_vertical">
		<Button android:layout_width="wrap_content" android:gravity="center"
			android:layout_height="wrap_content" android:text="系统配置"
			android:layout_marginRight="5dp" android:id="@+id/btn_net_config"
			android:textColor="@color/white" android:background="@drawable/btn_click_selector" />
	</LinearLayout>
</LinearLayout>
