<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:gravity="center_vertical">
		<EditText android:layout_width="fill_parent" android:hint="按床号查找"
			android:drawableLeft="@drawable/search" android:layout_weight="1"
			android:layout_height="wrap_content" android:id="@+id/et_number"
			android:numeric="integer" />
		<Button android:layout_width="wrap_content" android:text="搜索"
			android:textSize="19sp" android:layout_height="wrap_content"
			android:layout_weight="0" android:gravity="center" android:textColor="@color/white"
			android:background="@drawable/btn_click_selector" />
	</LinearLayout>
	<GridView android:id="@+id/gv_patient" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:verticalSpacing="10dp"
		android:horizontalSpacing="10dp" android:numColumns="3"
		android:scrollbars="none" />
</LinearLayout>