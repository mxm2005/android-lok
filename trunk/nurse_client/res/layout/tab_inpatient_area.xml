<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_weight="0" android:background="#4A4D4A"
		android:layout_height="wrap_content" android:gravity="center_vertical">
		<TextView android:layout_width="wrap_content" android:text="序号"
			android:textSize="19sp" android:layout_weight="1"
			android:layout_marginLeft="5dp" android:layout_height="wrap_content"
			android:gravity="center|left" />
		<TextView android:layout_width="wrap_content" android:text="病区"
			android:textSize="19sp" android:layout_height="wrap_content"
			android:layout_weight="2" android:gravity="center|left" />
	</LinearLayout>
	<ListView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_weight="1"
		android:id="@+id/lv_area" android:cacheColorHint="#00000000"
		android:scrollbars="none" android:divider="@drawable/img_listview_linecut_bg"
		android:dividerHeight="1dip" />
</LinearLayout>