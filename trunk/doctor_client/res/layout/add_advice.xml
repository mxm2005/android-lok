<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_margin="20dip" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:orientation="vertical">
	<RelativeLayout android:layout_width="fill_parent" android:gravity="center_vertical"
		android:layout_height="wrap_content">
		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="药品"
			android:textColor="@color/white" android:layout_marginLeft="5dip"
			android:layout_marginTop="3dip" android:background="@drawable/btn_suc_bg_selector"
			android:layout_alignParentLeft="true" android:textSize="16sp"
			android:gravity="center" />
		<TextView android:layout_width="fill_parent" android:layout_marginTop="5dip"
			android:layout_height="wrap_content" android:gravity="center"
			android:text="新开长期医嘱" android:textSize="22sp" android:textColor="@color/black" />
		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_marginRight="5dip"
			android:layout_marginTop="3dip" android:text="保存" android:textColor="@color/white"
			android:layout_gravity="center" android:background="@drawable/btn_suc_bg_selector"
			android:layout_alignParentRight="true" android:textSize="16sp"
			android:gravity="center" />
	</RelativeLayout>
	<TextView android:layout_width="fill_parent"
		android:layout_height="60dip" android:textColor="#0299CC" android:text="氨咖黄敏胶囊 10粒/板"
		android:layout_marginLeft="15dip" android:gravity="center_vertical" android:textSize="21sp"/>
	<LinearLayout android:layout_width="fill_parent"
		android:background="@drawable/advice_bg" android:layout_height="wrap_content"
		android:layout_marginLeft="25dip" android:layout_marginRight="25dip"
		android:orientation="vertical">

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="45dip" android:orientation="vertical">
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="44dip" android:gravity="center_vertical">
				<TextView android:id="@+id/tvTitle" android:layout_width="0dip"
					android:layout_height="wrap_content" android:textColor="@color/black" android:paddingLeft="7dip"
					android:gravity="left" android:textSize="18sp" android:text="紧急"
					android:layout_weight="39" android:layout_marginLeft="10dp" />
				<LinearLayout android:layout_width="0dip"
					android:layout_height="wrap_content" android:layout_weight="40"
					android:layout_marginRight="5dip" android:layout_marginTop="2dip"
					android:layout_marginBottom="2dip">
					<CheckBox android:layout_width="wrap_content" android:id="@+id/etSummary"
						android:paddingLeft="5.0dip" android:layout_height="wrap_content"
						android:layout_weight="3" />
				</LinearLayout>
			</LinearLayout>
			<ImageView android:layout_width="fill_parent"
				android:layout_height="1dip" android:background="@drawable/img_listview_linecut_bg" />
		</LinearLayout>
		
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="45dip" android:orientation="vertical">
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="44dip" android:gravity="center_vertical">
				<TextView android:id="@+id/tvTitle" android:layout_width="0dip" android:focusable="true" android:focusableInTouchMode="true"
					android:singleLine="true" android:layout_height="wrap_content" android:layout_marginLeft="10dp"
					android:textColor="@color/black" android:gravity="left" android:paddingLeft="7dip"
					android:textSize="18sp" android:text="开始时间" android:layout_weight="39" />
				<LinearLayout android:layout_width="0dip"
					android:layout_height="wrap_content" android:layout_weight="40"
					android:layout_marginRight="5dip" android:layout_marginTop="2dip"
					android:layout_marginBottom="2dip">
					<EditText android:textSize="14.0sp" android:paddingTop="2dip"
						android:gravity="center_vertical|left" android:background="@drawable/msg_border"
						android:id="@+id/etSummary" android:paddingLeft="10.0dip"
						android:saveEnabled="true" android:layout_width="200.0dip" android:textColor="@color/blue"
						android:layout_height="35.0dip" android:singleLine="true" android:text="2012-05-27 20:01">
					</EditText>
				</LinearLayout>
			</LinearLayout>
			<ImageView android:layout_width="fill_parent"
				android:layout_height="1dip" android:background="@drawable/img_listview_linecut_bg" />
		</LinearLayout>
		
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="45dip" android:orientation="vertical">
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="44dip" android:gravity="center_vertical">
				<TextView android:id="@+id/tvTitle" android:layout_width="0dip"
					android:paddingLeft="7dip" android:layout_height="wrap_content"
					android:textColor="@color/black" android:gravity="left"
					android:textSize="18sp" android:text="给药途径" android:layout_weight="39"
					android:layout_marginLeft="10dp" />
				<LinearLayout android:layout_width="0dip"
					android:layout_height="wrap_content" android:layout_weight="40"
					android:layout_marginRight="5dip" android:layout_marginTop="2dip"
					android:layout_marginBottom="2dip">
					<Spinner android:layout_width="wrap_content" android:id="@+id/etSummary"
						android:paddingLeft="20.0dip" android:layout_height="wrap_content"
						android:layout_weight="3" />
					<TextView android:layout_width="0dip"
						android:layout_height="0dip" android:id="@+id/tvTag" />
				</LinearLayout>
			</LinearLayout>
			<ImageView android:layout_width="fill_parent"
				android:layout_height="1dip" android:background="@drawable/img_listview_linecut_bg" />
		</LinearLayout>
		
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="45dip" android:orientation="vertical">
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="44dip" android:gravity="center_vertical">
				<TextView android:id="@+id/tvTitle" android:layout_width="0dip"
					android:paddingLeft="7dip" android:layout_height="wrap_content"
					android:textColor="@color/black" android:gravity="left"
					android:textSize="18sp" android:text="执行频率" android:layout_weight="39"
					android:layout_marginLeft="10dp" />
				<LinearLayout android:layout_width="0dip"
					android:layout_height="wrap_content" android:layout_weight="40"
					android:layout_marginRight="5dip" android:layout_marginTop="2dip"
					android:layout_marginBottom="2dip">
					<Spinner android:layout_width="wrap_content" android:id="@+id/etSummary"
						android:paddingLeft="20.0dip" android:layout_height="wrap_content"
						android:layout_weight="3" />
					<TextView android:layout_width="0dip"
						android:layout_height="0dip" android:id="@+id/tvTag" />
				</LinearLayout>
			</LinearLayout>
			<ImageView android:layout_width="fill_parent"
				android:layout_height="1dip" android:background="@drawable/img_listview_linecut_bg" />
		</LinearLayout>

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="45dip" android:orientation="vertical">
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="44dip" android:gravity="center_vertical">
				<TextView android:id="@+id/tvTitle" android:layout_width="0dip"
					android:singleLine="true" android:layout_height="wrap_content" android:layout_marginLeft="10dp"
					android:textColor="@color/black" android:gravity="left" android:paddingLeft="7dip"
					android:textSize="18sp" android:text="时间方案" android:layout_weight="39" />
				<LinearLayout android:layout_width="0dip"
					android:layout_height="wrap_content" android:layout_weight="40"
					android:layout_marginRight="5dip" android:layout_marginTop="2dip"
					android:layout_marginBottom="2dip">
					<EditText android:textSize="14.0sp" android:paddingTop="2dip"
						android:gravity="center_vertical|left" android:background="@drawable/msg_border"
						android:id="@+id/etSummary" android:paddingLeft="10.0dip"
						android:saveEnabled="true" android:layout_width="200.0dip"
						android:layout_height="35.0dip" android:singleLine="true">
					</EditText>
				</LinearLayout>
			</LinearLayout>
			<ImageView android:layout_width="fill_parent"
				android:layout_height="1dip" android:background="@drawable/img_listview_linecut_bg" />
		</LinearLayout>
		
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="45dip" android:orientation="vertical">
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="44dip" android:gravity="center_vertical">
				<TextView android:id="@+id/tvTitle" android:layout_width="0dip"
					android:singleLine="true" android:layout_height="wrap_content" android:layout_marginLeft="10dp"
					android:textColor="@color/black" android:gravity="left" android:paddingLeft="7dip"
					android:textSize="18sp" android:text="单量" android:layout_weight="39" />
				<LinearLayout android:layout_width="0dip"
					android:layout_height="wrap_content" android:layout_weight="40"
					android:layout_marginRight="5dip" android:layout_marginTop="2dip"
					android:layout_marginBottom="2dip">
					<EditText android:textSize="14.0sp" android:paddingTop="2dip"
						android:gravity="center_vertical|left" android:background="@drawable/msg_border"
						android:id="@+id/etSummary" android:paddingLeft="10.0dip"
						android:saveEnabled="true" android:layout_width="200.0dip"
						android:layout_height="35.0dip" android:singleLine="true"
						android:hint="0粒" android:textColorHint="@color/red">
					</EditText>
				</LinearLayout>
			</LinearLayout>
			<ImageView android:layout_width="fill_parent"
				android:layout_height="1dip" android:background="@drawable/img_listview_linecut_bg" />
		</LinearLayout>
		
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="45dip" android:orientation="vertical">
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="44dip" android:gravity="center_vertical">
				<TextView android:id="@+id/tvTitle" android:layout_width="0dip"
					android:singleLine="true" android:layout_height="wrap_content"  android:layout_marginLeft="10dp"
					android:textColor="@color/black" android:gravity="left" android:paddingLeft="7dip"
					android:textSize="18sp" android:text="发药药房" android:layout_weight="39" />
				<LinearLayout android:layout_width="0dip"
					android:layout_height="wrap_content" android:layout_weight="40"
					android:layout_marginRight="5dip" android:layout_marginTop="2dip"
					android:layout_marginBottom="2dip">
					<EditText android:textSize="14.0sp" android:paddingTop="2dip"
						android:gravity="center_vertical|left" android:background="@drawable/msg_border"
						android:id="@+id/etSummary" android:paddingLeft="10.0dip"
						android:saveEnabled="true" android:layout_width="200.0dip"
						android:layout_height="35.0dip" android:singleLine="true"
						android:hint="西药房" android:textColorHint="@color/blue">
					</EditText>
				</LinearLayout>
			</LinearLayout>
			<ImageView android:layout_width="fill_parent"
				android:layout_height="1dip" android:background="@drawable/img_listview_linecut_bg" />
		</LinearLayout>
		
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="45dip" android:orientation="vertical">
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="44dip" android:gravity="center_vertical">
				<TextView android:id="@+id/tvTitle" android:layout_width="0dip"
					android:singleLine="true" android:layout_height="wrap_content" android:layout_marginLeft="10dp"
					android:textColor="@color/black" android:gravity="left" android:paddingLeft="7dip"
					android:textSize="18sp" android:text="执行科室" android:layout_weight="39" />
				<LinearLayout android:layout_width="0dip"
					android:layout_height="wrap_content" android:layout_weight="40"
					android:layout_marginRight="5dip" android:layout_marginTop="2dip"
					android:layout_marginBottom="2dip">
					<EditText android:textSize="14.0sp" android:paddingTop="2dip"
						android:gravity="center_vertical|left" android:background="@drawable/msg_border"
						android:id="@+id/etSummary" android:paddingLeft="10.0dip"
						android:saveEnabled="true" android:layout_width="200.0dip"
						android:layout_height="35.0dip" android:singleLine="true">
					</EditText>
				</LinearLayout>
			</LinearLayout>
			<ImageView android:layout_width="fill_parent"
				android:layout_height="1dip" android:background="@drawable/img_listview_linecut_bg" />
		</LinearLayout>
		
	</LinearLayout>
</LinearLayout>

