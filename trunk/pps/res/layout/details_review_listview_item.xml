            <TextView android:id="@id/details_review_listview_item_textview_info" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/details_button_review_listview_item_textview_margin_top" style="\@style/textview_setting_about_info" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>