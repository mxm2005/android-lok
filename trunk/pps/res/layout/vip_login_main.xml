            <RelativeLayout android:layout_width="fill_parent" android:layout_height="@dimen/relativelayout_height">
                <TextView android:id="@id/textview_login_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/textview_login_margin_left" android:text="@string/vip_login_name" android:layout_centerVertical="true" style="\@style/textview_common" />
